{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.pgo.ts",
    "**/*.e2e.ts"

  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
